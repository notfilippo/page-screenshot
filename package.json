{
	"private": true,
	"scripts": {
		"build": "parcel build source/manifest.json --no-content-hash --no-source-maps --dist-dir distribution --no-cache --detailed-report 0",
		"lint": "run-p lint:*",
		"lint-fix": "run-p 'lint:* -- --fix'",
		"lint:css": "stylelint source/**/*.css",
		"lint:js": "xo --prettier",
		"test": "run-p lint:* build",
		"watch": "parcel watch source/manifest.json --dist-dir distribution --no-cache --no-hmr"
	},
	"browserslist": [
		"last 1 Chrome version",
		"last 1 Firefox version"
	],
	"xo": {
		"envs": [
			"browser",
			"webextensions"
		]
	},
	"stylelint": {
		"extends": "stylelint-config-xo"
	},
	"dependencies": {
		"@parcel/core": "^2.8.2",
		"html2canvas": "^1.4.1",
		"node-fetch": "^3.3.0",
		"webext-base-css": "^1.4.3",
		"webext-options-sync": "^3.1.0",
		"webpack": "^5.75.0"
	},
	"devDependencies": {
		"@parcel/config-webextension": "^2.8.2",
		"npm-run-all": "^4.1.5",
		"parcel": "^2.8.2",
		"prettier": "^2.8.3",
		"stylelint": "^14.16.1",
		"stylelint-config-xo": "^0.21.1",
		"xo": "^0.50.0"
	},
	"webExt": {
		"sourceDir": "distribution",
		"run": {
			"startUrl": [
				"https://github.com/notfilippo/page-screenshot"
			]
		}
	},
	"@parcel/bundler-default-bug": "https://github.com/parcel-bundler/parcel/issues/8071",
	"@parcel/bundler-default": {
		"minBundles": 10000000
	},
	"prettier": {
		"singleQuote": true
	}
}
